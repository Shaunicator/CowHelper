function createOptionSet(target, options) {
  let optionSet = [];
  //add validation that target exists and is for "select" here

  for (let key in options) {

    let currentOption = new Element("option", { "value": key }, [options[key]]).create();
    optionSet.push(currentOption);
  }
  document.getElementById(target).appendChild(optionSet);
}


export function createSelect(labelText, labelAttrib, selectAttrib, options) {

  let optionSet = []; //initialise blank array to hold options

  for (let key in options) {

    let currentOption = new DomElement_Base("option", { "value": key }, [options[key]]).create();
    optionSet.push(currentOption);
  }
  let newSelect = new DomElement_Base("select", selectAttrib, optionSet).create();

  return new DomElement_Base("label", labelAttrib, [labelText, newSelect]).create();
}


